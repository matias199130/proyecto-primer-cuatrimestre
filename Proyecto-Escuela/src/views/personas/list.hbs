<div class="container">
{{#if session.successMessage}}
  <div class="alert alert-success" role="alert">
    {{session.successMessage}}
  </div>
  {{#with session}} {{unset successMessage}} {{/with}} <!-- Limpiar el mensaje despuÃ©s de mostrarlo -->
{{/if}}
    <div class="row m-5">
        <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
        {{#if personas}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
         <th scope="col" class="col-2">Nombre</th>
                     <th scope="col">Apellido</th>
                        <th scope="col">Edad</th>
                        <th scope="col">curso</th>
                     <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each personas}}
                        <tr>
                            <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{edad}}</td>
                    <td>{{curso}}</td>
                            <td>
                                <div class="btn-group ">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="7">REGISTRO DE PERSONAS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="/add" class="btn btn-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>